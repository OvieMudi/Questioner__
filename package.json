{
  "name": "questioner",
  "version": "1.0.0",
  "description": "Crowd-source questions for a scheduled meetup",
  "main": "app.js",
  "scripts": {
    "start-local": "cross-env NODE_ENV='development' nodemon --exec babel-node ./app.js",
    "start": "babel-node ./app.js",
    "test": "cross-env NODE_ENV='test' npm run migrate&& cross-env NODE_ENV='test' mocha ./server/test --compilers js:@babel/register --recursive --timeout 3000 --exit",
    "test-coverage": "cross-env NODE_ENV='test' nyc mocha ./server/test --recursive --exit",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "migrate": "babel-node ./server/db/v1_postgres/migrateDB",
    "heroku-postbuild": "npm run migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OvieMudi/Questioner__.git"
  },
  "keywords": [
    "meetups",
    "crowd-source questions",
    "scheduler"
  ],
  "author": "Ovie Mudi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OvieMudi/Questioner__/issues"
  },
  "homepage": "https://github.com/OvieMudi/Questioner__#readme",
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "dialog-polyfill": "^0.4.10",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "nodemon": "^1.18.9",
    "pg": "^7.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.5",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "istanbul": "^0.4.5",
    "make-runnable": "^1.3.6",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
