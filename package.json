{
  "name": "questioner",
  "version": "1.0.0",
  "description": "Crowd-source questions for a scheduled meetup",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && nodemon ./build/index.js",
    "build": "npm run clean-build && npm run babel-build",
    "babel-build": "babel -d ./build ./server -s",
    "clean-build": "rm -rf build && mkdir build",
    "serve": "SET NODE_ENV=dev && node ./dist/index.js",
    "test": "mocha --compilers js:@babel/register --exit",
    "test-coverage": "cross-env NODE_ENV=test nyc mocha --exit",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OvieMudi/Questioner__.git"
  },
  "keywords": [
    "meetups",
    "crowd-source questions",
    "scheduler"
  ],
  "author": "Ovie Mudi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OvieMudi/Questioner__/issues"
  },
  "homepage": "https://github.com/OvieMudi/Questioner__#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "nodemon": "^1.18.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "@types/chai": "^4.1.6",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
